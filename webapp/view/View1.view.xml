<mvc:View
	controllerName="courseRegistrationPage.controller.View1"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
>
	<App>
		<pages>
			<Page title="Registration Page">
			<customHeader>
            <Bar>
                <contentRight>
                    <Image
                        src="./src/img/logo.svg"
                        height="40px"
                        width="auto"
												press=".onLogoPress"
												densityAware="true"
												alt="App Logo" />
                </contentRight>
                <contentMiddle>
                    <Text text="Registration Page" />
                </contentMiddle>
            </Bar>
      </customHeader>
				<content>
					<l:VerticalLayout
						id="oVerticalContent"
						class="sapUiResponsiveContentPadding"
						width="100%"
					>
						<Label
							text="Name"
							labelFor="nameInput"
						/>
						<Input
							id="nameInput"
							class="required-star"
							placeholder="Enter name"
							required="true"
							valueStateText="Name must not be empty. Maximum 64 characters."
							value="{
								path: '/name',
								type: 'sap.ui.model.type.String',
								constraints: {
									minLength: 1,
									maxLength: 64
								}
							}"
							change=".onNameChange"
						/>
						<Label
							text="Last Name"
							labelFor="lastNameInput"
						/>
						<Input
							id="lastNameInput"
							class="required-star"
							placeholder="Enter last name"
							required="true"
							valueStateText="Last name must not be empty. Maximum 64 characters."
							value="{
								path: '/lastName',
								type: 'sap.ui.model.type.String',
								constraints: {
									minLength: 1,
									maxLength: 64
								}
							}"
							change=".onNameChange"
						/>
						<VBox>
							<HBox alignItems="Center">
								<Text
									text="*"
									class="required-star"
								/>
								<Label
									text="City"
									labelFor="CityId"
								/>
							</HBox>
							<Select
								selectedKey="{/selectedCity}"
								class="required-star"
								width="200px"
								required="true"
								items="{/CityCollection}"
							>
								<core:Item
									key="{CityId}"
									text="{City}"
								/>
							</Select>
						</VBox>
						<Label
							text="Phone number"
							labelFor="phoneInput"
						/>
						<Input
							id="phoneInput"
							placeholder="+375XX XXX XX XX"
							class="required-star"
							valueLiveUpdate="true"
							required="true"
						/>
						<Label
							text="E-mail"
							labelFor="emailInput"
						/>
						<Input
							id="emailInput"
							class="required-star"
							type="Email"
							placeholder="Enter email"
							required="true"
							valueStateText="E-mail must not be empty. E-mail must be a valid email address."
							value="{
								path: '/email',
								type: '.customEMailType',
								constraints: {
									minLength: 1,
									maxLength: 256
								}
							}"
						/>
						<Label
							text="Password"
							labelFor="passwordInput"
						/>
						<Input
							id="passwordInput"
							type="Password"
							placeholder="Enter password"
							tooltip="The password must contain: - from 8 to 14 characters, - at least one capital letter, - one lowercase letter, - one number and - one special character"
							class="required-star"
							required="true"
							valueLiveUpdate="true"
						/>
						<Label
							text="Confirm Password"
							labelFor="confirmPasswordInput"
						/>
						<Input
							id="confirmPasswordInput"
							type="Password"
							placeholder="Confirm password"
							class="required-star"
							required="true"
							valueLiveUpdate="true"
						/>
						<VBox>
						<l:DynamicSideContent>
						<HBox class = "hbox-flex">
								<CheckBox
									id="consentCheckbox"
									selected="false"
									select=".onCheckBoxSelect"
								/>
								<Text text="I agree with" />
								<Link
									class="myLink"
									href="./src/pdf/UsersAgreement.pdf"
									target="_blank"
									text="the terms of the user agreement"
									tooltip="Click here to read the user agreement"
								/>
								<Text text="and" />
								<Link
									class="myLink"
									href="./src/pdf/PlatformRules.pdf"
									text="platform rule"
									target="_blank"
									tooltip="Click here to read the platform rule"
								/>
						</HBox>
						</l:DynamicSideContent>
						</VBox>
						<Label
							text="Promocode"
							labelFor="promocodeInput"
						/>
						<Input id="promocodeInput" />
						<l:HorizontalLayout>
							<Button
								text="Register"
								type="Emphasized"
								enabled="{modelReg>/submitEnabled}"
								press=".onSubmit"
							/>
							<Button
								text="Cancel"
								type="Transparent"
								press=".onCancel"
							/>
						</l:HorizontalLayout>
					</l:VerticalLayout>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>